source 'https://rubygems.org'
if RUBY_VERSION == '1.9.3'
  ruby '1.9.3'
else
  ruby '2.0.0'
end

# Server
gem 'unicorn'
gem 'foreman'

# App
gem 'rake'
gem 'sinatra'
gem 'sinatra-contrib'
gem 'erubis'

# Development
group :development do
  gem 'awesome_print'
end

# Assets
group :assets do
  gem 'sprockets'
  gem 'sass'
  gem 'uglifier'
end
